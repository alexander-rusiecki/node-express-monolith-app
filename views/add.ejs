<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <header><%- include('./partials/nav.ejs') %></header>
    <main>
      <form action="/add" method="POST">
        <div class="form-inputs">
          <label for="title">Title</label>
          <input type="text" name="title" required />
          <label for="author">Author</label>
          <input type="text" name="author" required />
          <label for="coverUrl">Cover</label>
          <input type="url" name="coverUrl" required />
          <section class="radio">
            <div>
              <label>available</label>
              <input
                type="radio"
                name="isAvailable"
                value="available"
                checked
              />
            </div>
            <div>
              <label>not available</label>
              <input type="radio" name="isAvailable" value="notAvailable" />
            </div>
          </section>
          <button class="add" type="submit">Add book</button>
        </div>
      </form>
    </main>
  </body>
</html>
